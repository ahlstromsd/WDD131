        imgAlt: 'Book cover for Magnus Chase 1',
        ages: '12-16',
        genre: 'Fantasy',
        stars: '⭐⭐⭐⭐'
    }
];

// Function to generate the HTML for each article
function generateArticleHTML(article) {
    return `
        <article class="book-review">
            <div class="book-details">
                <p class="book-date" aria-label="Published on">${article.date}</p>
                <p class="book-genre" aria-label="Genre">${article.genre}</p>
                <p class="book-ages" aria-label="Recommended age range">${article.ages}</p>
                <p class="book-rating" aria-label="Rating">${article.stars}</p>
            </div>
            <div class="book-content">
                <img src="${article.imgSrc}" alt="${article.imgAlt}" class="book-cover" />
                <div class="book-info">
                    <h2>${article.title}</h2>
                    <p>${article.description}</p>
                </div>
            </div>
        </article>
    `;
}

// Function to load articles dynamically into the container
function loadArticles() {
    const container = document.getElementById('articles-container');
    articles.forEach(article => {
        container.innerHTML += generateArticleHTML(article);
    });
}

// Call the function to load the articles
loadArticles();
